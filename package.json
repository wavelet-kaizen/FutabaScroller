{
    "name": "futaba-scroller",
    "version": "1.0.0",
    "description": "Auto-scroll Futaba threads based on timestamps",
    "private": true,
    "scripts": {
        "type-check": "tsc --noEmit",
        "build": "node build.mjs",
        "build:dev": "node build.mjs --dev",
        "test": "jest --config jest.config.ts",
        "test:watch": "jest --watch",
        "test:coverage": "jest --coverage",
        "format": "prettier --tab-width 4 --write \"src/**/*.ts\" \"tests/**/*.ts\" \"*.ts\" \"*.mjs\"",
        "format:check": "prettier --tab-width 4 --check \"src/**/*.ts\" \"tests/**/*.ts\"",
        "prebuild": "npm run type-check"
    },
    "devDependencies": {
        "@jest/globals": "^29.7.0",
        "@types/jest": "^29.5.0",
        "@types/jsdom": "^21.1.0",
        "@types/node": "^20.11.0",
        "esbuild": "^0.20.0",
        "jest": "^29.7.0",
        "jest-environment-jsdom": "^29.7.0",
        "jsdom": "^24.0.0",
        "prettier": "^3.2.0",
        "ts-node": "^10.9.2",
        "ts-jest": "^29.1.0",
        "typescript": "^5.7.0"
    }
}
